<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StackAct2">

    <TextView
        android:id="@+id/tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="nyc_photographer"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_three"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-2dp"
        android:src="@drawable/natact" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:text="Like"
        android:textColor="@color/blueLight" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:layout_alignLeft="@id/tv_like"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:text="comment"
        android:textColor="@color/blueLight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:layout_alignLeft="@id/tv_comment"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:text="Share"
        android:textColor="@color/blueLight" />

    <LinearLayout
        android:layout_below="@id/tv_comment"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_700"
            android:layout_width="wrap_content"
            android:textColor="@color/blackD"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="700 Likes"/>

        <TextView
            android:id="@+id/tv_qu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="This is a shot yesterday in Skanor, Sweden, when driving home,from a couple of days of work in Denmar "/>

    </LinearLayout>


</RelativeLayout>